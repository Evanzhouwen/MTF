option(WITH_MIL "Enable Multiple Instance Learning (MIL) Tracker" OFF)
if(WITH_MIL)
	set(LIBS_LEARNING ${LIBS_LEARNING} mil)
	set(LEARNING_TRACKERS ${LEARNING_TRACKERS} MIL/src/MIL)
	set(THIRD_PARTY_INCLUDE_DIRS ${THIRD_PARTY_INCLUDE_DIRS} MIL/include)
	add_subdirectory(${CMAKE_CURRENT_LIST_DIR})
else(WITH_MIL)		
	set(THIRD_PARTY_RUNTIME_FLAGS ${THIRD_PARTY_RUNTIME_FLAGS} -DDISABLE_GOTURN)
	message(STATUS "MIL disabled")
endif(WITH_MIL)