option(WITH_GOTURN "Enable GOTURN Tracker (Requires Caffe and some other libraries)" OFF)
if(WITH_GOTURN)
	set(THIRD_PARTY_LIBS ${THIRD_PARTY_LIBS} goturn)
	set(LEARNING_TRACKERS ${LEARNING_TRACKERS} GOTURN/src/GOTURN)
	set(THIRD_PARTY_INCLUDE_DIRS ${THIRD_PARTY_INCLUDE_DIRS} GOTURN/include)
	add_subdirectory(${CMAKE_CURRENT_LIST_DIR})
else(WITH_GOTURN)		
	set(THIRD_PARTY_DEFINITIONS ${THIRD_PARTY_DEFINITIONS} DISABLE_GOTURN)
	message(STATUS "GOTURN disabled")
	# message(STATUS "ViSP: THIRD_PARTY_RUNTIME_FLAGS: ${THIRD_PARTY_RUNTIME_FLAGS}")
endif(WITH_GOTURN)