DSST_ROOT_DIR = ThirdParty/DSST
DSST_SRC_DIR = ${DSST_ROOT_DIR}/src
DSST_INCLUDE_DIR = ${DSST_ROOT_DIR}/include
DSST_HEADER_DIR = ${DSST_INCLUDE_DIR}/mtf/${DSST_ROOT_DIR}

THIRD_PARTY_TRACKERS += DSST
DSST_HEADERS = $(addprefix  ${DSST_HEADER_DIR}/, DSST.h wrappers.h HOG.h Params.h sse.hpp)

THIRD_PARTY_HEADERS += ${DSST_HEADERS}
THIRD_PARTY_INCLUDE_DIRS += ${DSST_INCLUDE_DIR}

ifeq (${o}, 1)
OPT_FLAGS_DSST = -O2 -msse2 -D NDEBUG
THIRD_PARTY_RUNTIME_FLAGS += -msse2
else
OPT_FLAGS_DSST = -g -O0 -msse2
endif

${BUILD_DIR}/DSST.o: ${DSST_SRC_DIR}/DSST.cc ${DSST_HEADERS} ${UTILITIES_HEADER_DIR}/miscUtils.h ${MACROS_HEADER_DIR}/common.h ${ROOT_HEADER_DIR}/TrackerBase.h 
	${CXX} -c ${MTF_PIC_FLAG} ${WARNING_FLAGS} ${OPT_FLAGS_DSST} ${MTF_COMPILETIME_FLAGS} -I${DSST_INCLUDE_DIR} -I${UTILITIES_INCLUDE_DIR} -I${MACROS_INCLUDE_DIR} -I${ROOT_INCLUDE_DIR} $< ${OPENCV_FLAGS} -o $@
	
