option(WITH_Boosting "Enable Boosting Tracker" ON)
if(WITH_Boosting)
	set(THIRD_PARTY_LIBS ${THIRD_PARTY_LIBS} mil)
	set(THIRD_PARTY_TRACKERS ${THIRD_PARTY_TRACKERS} Boosting/src/Boosting)
	set(THIRD_PARTY_INCLUDE_DIRS ${THIRD_PARTY_INCLUDE_DIRS} Boosting/include)
	add_subdirectory(${CMAKE_CURRENT_LIST_DIR})
else(WITH_Boosting)		
	set(THIRD_PARTY_DEFINITIONS ${THIRD_PARTY_DEFINITIONS} DISABLE_Boosting)
	message(STATUS "Boosting disabled")
endif(WITH_Boosting)